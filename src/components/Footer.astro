---
export interface Props {
  name: string;
  year?: number;
}

const { name, year = new Date().getFullYear() } = Astro.props;
---

<footer class="py-8 px-6 text-center" style="border-top: 1px solid rgba(255,0,204,0.15);">
  <div class="max-w-5xl mx-auto flex flex-col sm:flex-row items-center justify-between gap-4">
    <span class="font-display font-bold text-lg tracking-tight" style="color: var(--ink);">{name}</span>
    <p class="font-mono text-xs tracking-widest opacity-40" style="color: var(--ink);">
      © {year} — Construido con Astro & Tailwind
    </p>
    <a href="#top" class="font-mono text-xs tracking-widest transition-colors"
      style="color: var(--gold);">
      ↑ VOLVER ARRIBA
    </a>
  </div>
</footer>