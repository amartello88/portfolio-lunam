---
export interface Props {
  name: string;
  role: string;
  bio?: string;
  avatar?: string;
  social?: {
    github?: string;
    linkedin?: string;
    whatsapp?: string;
    email?: string;
  };
}

const {
  name,
  role,
  bio = 'Desarrollador apasionado por crear experiencias digitales memorables.',
  avatar = '/perfil.jpg',
  social = {},
} = Astro.props;
---

<header class="relative min-h-screen flex flex-col justify-center overflow-hidden px-6 py-20">
  <!-- Background decorations -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-0 right-0 w-1/2 h-full opacity-5"
      style="background: radial-gradient(ellipse at 80% 20%, #FF3D8F 0%, transparent 60%);">
    </div>
    <div class="absolute bottom-0 left-0 w-64 h-64 rounded-full opacity-10"
      style="background: #FF3D8F; filter: blur(80px);">
    </div>
    <!-- Decorative corner lines -->
    <svg class="absolute top-8 left-8 opacity-20" width="60" height="60" viewBox="0 0 60 60" fill="none">
      <path d="M0 60V0H60" stroke="var(--gold)" stroke-width="1"/>
    </svg>
    <svg class="absolute bottom-8 right-8 opacity-20" width="60" height="60" viewBox="0 0 60 60" fill="none">
      <path d="M60 0V60H0" stroke="var(--gold)" stroke-width="1"/>
    </svg>
  </div>

  <div class="max-w-5xl mx-auto w-full grid md:grid-cols-2 gap-16 items-center relative z-10">
    <!-- Text content -->
    <div class="order-2 md:order-1">
      <div class="animate-fade-up delay-1 flex items-center gap-3 mb-6">
        <div class="w-8 h-px bg-gold"></div>
        <span class="font-mono text-xs tracking-widest text-gold uppercase typewriter">{role}</span>
      </div>

      <h1 class="animate-fade-up delay-2 font-display font-bold text-5xl md:text-6xl lg:text-7xl leading-none mb-6 tracking-tight" style="color: var(--ink);">
        {name}
      </h1>

      <p class="animate-fade-up delay-3 text-base leading-relaxed mb-10 max-w-sm" style="color: rgba(13,13,13,0.60);">
        {bio}
      </p>

      <!-- Social links -->
      <div class="animate-fade-up delay-4 flex items-center gap-4 flex-wrap">
        {social.email && (
          <a href={`mailto:${social.email}`}
            class="group flex items-center gap-2 text-sm font-medium transition-colors"
            style="color: var(--ink);">
            <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            Email
          </a>
        )}
        {social.github && (
          <a href={social.github} target="_blank" rel="noopener"
            class="group flex items-center gap-2 text-sm font-medium transition-colors"
            style="color: var(--ink);">
            <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </a>
        )}
        {social.linkedin && (
          <a href={social.linkedin} target="_blank" rel="noopener"
            class="group flex items-center gap-2 text-sm font-medium transition-colors"
            style="color: var(--ink);">
            <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
        )}
        {social.whatsapp && (
          <a href={`https://wa.me/${social.whatsapp}`} target="_blank" rel="noopener"
            class="group flex items-center gap-2 text-sm font-medium transition-colors"
            style="color: var(--ink);">
            <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            WhatsApp
          </a>
        )}

        <a href="#contacto"
          class="ml-auto px-6 py-2.5 text-sm font-medium tracking-wide transition-all"
          style="background: var(--ink); color: var(--cream); border-radius: 2px;">
          Contactar â†’
        </a>
      </div>
    </div>

    <!-- Avatar -->
    <div class="order-1 md:order-2 flex justify-center md:justify-end animate-fade-in delay-1">
      <div class="relative flex items-center justify-center">
        <div class="relative w-72 h-72 md:w-80 md:h-80 rounded-full overflow-hidden"
          style="box-shadow: 0 0 0 3px #FF3D8F, 0 0 40px rgba(255,0,204,0.35);">
          <img
            src={avatar}
            alt={name}
            class="w-full h-full object-cover object-top"
          />
        </div>

        <!-- Role badge -->
        <div class="absolute -bottom-4 left-1/2 -translate-x-1/2 px-5 py-2 text-xs font-mono tracking-wider whitespace-nowrap"
          style="background: #FF3D8F; color: #fff; border-radius: 2px; box-shadow: 0 0 16px rgba(255,0,204,0.5);">
          {role}
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 animate-fade-in delay-6">
    <span class="font-mono text-xs tracking-widest opacity-40" style="color: var(--ink);">SCROLL</span>
    <div class="w-px h-12 overflow-hidden" style="background: rgba(13,13,13,0.15);">
      <div class="w-full h-full" style="background: var(--gold); animation: scrollLine 1.5s ease-in-out infinite;"></div>
    </div>
  </div>
</header>

<style>
  @keyframes scrollLine {
    0% { transform: translateY(-100%); }
    100% { transform: translateY(100%); }
  }

  @keyframes typing {
    from { width: 0; }
    to { width: 24ch; }
  }

  @keyframes blink {
    0%, 100% { border-color: transparent; }
    50% { border-color: #FF3D8F; }
  }

  .typewriter {
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    width: 0;
    border-right: 2px solid #FF3D8F;
    animation:
      typing 1.5s steps(20, end) 0.8s forwards,
      blink 0.8s step-end 0.8s infinite;
  }
</style>