---
export interface Project {
  title: string;
  description: string;
  image?: string;
  tags: string[];
  url?: string;
  github?: string;
}

export interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<section class="py-24 px-6">
  <div class="max-w-5xl mx-auto">
    <div data-animate class="mb-16">
      <div class="ornament mb-4">
        <span class="font-mono text-xs tracking-widest">PORTFOLIO</span>
      </div>
      <h2 class="section-title text-center">Proyectos Destacados</h2>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      {projects.map((project, i) => (
        <article data-animate class={`hover-lift delay-${(i % 2) + 1} group relative overflow-hidden`}
          style="background: rgba(255,255,255,0.9); border: 1px solid rgba(255,0,204,0.2); border-radius: 2px; backdrop-filter: blur(4px);">

          <!-- Image -->
          {project.image && (
            <div class="relative h-48 overflow-hidden">
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                onerror="this.parentElement.style.display='none'"
              />
              <div class="absolute inset-0" style="background: linear-gradient(to bottom, transparent 50%, rgba(26,18,8,0.5));"></div>
            </div>
          )}

          <div class="p-6">
            <h3 class="font-display font-bold text-xl mb-2 tracking-tight" style="color: var(--ink);">{project.title}</h3>
            <p class="text-sm leading-relaxed mb-4" style="color: rgba(26,18,8,0.65);">{project.description}</p>

            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </div>

            <!-- Links -->
            <div class="flex items-center gap-4 pt-2 border-t" style="border-color: rgba(255,0,204,0.15);">
              {project.github && (
                <a href={project.github} target="_blank" rel="noopener"
                  class="flex items-center gap-1.5 text-xs font-mono transition-colors hover:text-gold"
                  style="color: rgba(26,18,8,0.5);">
                  <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
                  </svg>
                  Código
                </a>
              )}
              {project.url && (
                <a href={project.url} target="_blank" rel="noopener"
                  class="flex items-center gap-1.5 text-xs font-mono transition-colors hover:text-gold ml-auto"
                  style="color: var(--gold);">
                  Ver proyecto →
                </a>
              )}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .hover\:text-gold:hover { color: var(--gold); }
</style>